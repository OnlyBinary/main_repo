<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hana.repository.MemberRepository">

    <select id="selectOne" parameterType="String" resultType="memberDto">
        SELECT * FROM member WHERE memberid=#{memberid}
    </select>
    <select id="select" resultType="memberDto">
        SELECT * FROM member
    </select>
    <insert id="insert" parameterType="memberDto">
        INSERT INTO member VALUES (#{memberid}, #{membernm}, #{membertel}, #{memberpwd}, #{memberaddr}, #{memberemail}, #{snsagree})
    </insert>
    <update id="update" parameterType="memberDto">
        UPDATE member SET memebernm=#{membernm} WHERE memberid=#{memberid}
    </update>
    <delete id="delete" parameterType="String">
        DELETE FROM member WHERE memberid=#{memberid}
    </delete>

</mapper>